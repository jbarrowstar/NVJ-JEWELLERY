{
  "name": "nirvaha_pos",
  "version": "1.0.0",
  "main": "electron/main.js",
  "scripts": {
    "electron": "electron electron/main.js",
    "frontend:build": "cd frontend && npm run build",
    "build": "npm run frontend:build && electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "commonjs",
  "devDependencies": {
    "electron": "^38.4.0",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.nirvaha.pos",
    "productName": "Nirvaha POS",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*"
    ],
    "extraMetadata": {
      "main": "electron/main.js"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "mac": {
      "target": "dmg"
    }
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.2"
  }
}
